@inherits LayoutComponentBase
@inject SessionStateService SessionState

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @* --- ADD THIS SESSION DISPLAY --- *@
            @if (SessionState.IsUserLoggedIn)
            {
                <span class="text-light">Welcome, @SessionState.CurrentUserName!</span>
            }
            else
            {
                <span class="text-light">Welcome, Guest!</span>
            }
            @* -------------------------------- *@
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>